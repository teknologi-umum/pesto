---
export type Props = {
	items: FieldListItem[];
};

type FieldListItem = {
	key: string;
	value: string;
	nestedItems?: FieldListItem[];
};

const props = Astro.props as Props;
---

<ul class="field-list">
	{props.items.map((item) => (
		<li>
			<strong>{item.key}</strong>
			{item.value}
			{item.nestedItems?.length > 0 && <Astro.self items={item.nestedItems} />}
		</li>
	))}
</ul>

<style lang="scss" is:global>
	.field-list {
		padding-left: 1.5rem;
		font-family: "IBM Plex Sans", sans-serif;
		font-weight: 400;
		line-height: 2em;
		font-size: 1.25rem;
	}
</style>
